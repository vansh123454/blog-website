<%- include('../partial/head') %>
</head>

<body class="min-h-screen bg-gradient-to-r from-amber-50 via-white to-amber-50 flex flex-col">

  <%- include('../partial/nav') %>

  <!-- Main Content -->
  <main class="flex flex-1 justify-center px-4 pt-10">

    <div class="w-full max-w-md">
      
      <h1 class="text-4xl font-extrabold mb-3 text-gray-800 text-center">
        Welcome Back
      </h1>


      <p class="text-gray-500 text-center mb-6">
        Login with your credentials
      </p>

      <!-- without styling -->
      <!-- <% if(errors.length > 0){ %>
        <% errors.forEach((err)=>{ %>
          <%= err %>
        <% }) %>
      <% } %>  -->

      <% if (errors && errors.length > 0) { %>
        <div class="mb-4 rounded-xl border border-red-200 bg-red-50 p-4">
          <ul class="space-y-1 text-sm text-red-700">
            <% errors.forEach(err => { %>
              <li class="flex items-center gap-2">
                <span class="font-semibold">â€¢</span>
                <%= err %>
              </li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <form
        action="/login"
        method="POST"
        class="bg-white shadow-xl rounded-2xl p-8 flex flex-col gap-4"
      >
        <div>
          <label class="text-sm font-medium text-gray-600 mb-1 block">
            Email
          </label>
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            value="<%= oldInput.email === '' ? '' : oldInput.email %>"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent transition"
            required
          />
        </div>

        <div>
          <label class="text-sm font-medium text-gray-600 mb-1 block">
            Password
          </label>
          <input
            type="password"
            name="password"
            placeholder="Enter your password"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent transition"
            required
          />
        </div>

        <button
          type="submit"
          class="mt-4 bg-amber-500 hover:bg-amber-600 text-white py-2 rounded-lg font-semibold transition-all duration-200 shadow-md hover:shadow-lg cursor-pointer"
        >
          Log In
        </button>
      </form>

    </div>
  </main>


  <!-- This is for mobile. It works on three lines thing -->
  <script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("menu-btn");
    const menu = document.getElementById("mobile-menu");

    if (!btn || !menu) return;

    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  });
</script>

</body>
</html>
